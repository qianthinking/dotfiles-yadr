{
  "suggest.triggerAfterInsertEnter": true,
  "suggest.timeout": 500,
  "suggest.noselect": false,
  "suggest.minTriggerInputLength": 2,
  "suggest.detailField":"abbr",
  "outline.autoPreview": true,
  "outline.expandLevel": 0,
  "suggest.snippetIndicator": "ðŸŒŸ",
  "suggest.triggerCompletionWait": 50,
  "coc.preferences.formatOnType": false,
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "codeLens.enable": true,
  "diagnostic.errorSign": "âœ˜",
  "diagnostic.virtualText": true,
  "python.pythonPath": "~/bin/vimpython",
  "python.venvPath": "~/condalink/envs/neovim",
  "python.formatting.provider": "ruff",
  "pyright.organizeimports.provider": "ruff",
  "pyright.enable": true,
  "python.linting.enabled": true,
  "python.linting.ruffEnabled": true,
  "python.analysis.typeCheckingMode": "basic",
  "yaml.maxItemsComputed": 20000,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  },
  "git.enableGutters": true,
  "snippets.ultisnips.pythonPrompt": false
}
