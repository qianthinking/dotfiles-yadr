{
  "suggest.triggerAfterInsertEnter": true,
  "suggest.timeout": 500,
  "suggest.noselect": false,
  "suggest.minTriggerInputLength": 2,
  "suggest.detailField":"abbr",
  "outline.autoPreview": true,
  "outline.expandLevel": 0,
  "suggest.snippetIndicator": "ðŸŒŸ",
  "suggest.triggerCompletionWait": 50,
  "coc.preferences.formatOnType": false,
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "codeLens.enable": true,
  "diagnostic.errorSign": "âœ˜",
  "diagnostic.virtualText": true,
  "python.pythonPath": "~/bin/vimpython",
  "python.venvPath": "~/miniforge3/envs/neovim",
  "python.formatting.provider": "black",
  "python.formatting.yapfPath": "~/bin/vimyapf",
  "python.formatting.blackPath": "~/bin/vimblack",
  "pyright.enable": true,
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.analysis.typeCheckingMode": "basic",
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    }
  },
  "git.enableGutters": true
}
