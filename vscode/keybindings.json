// Place your key bindings in this file to override the defaults
[
  {
    "key": ", f g",
    "command": "workbench.action.findInFiles",
    "when": "explorerViewletFocus"
  },
  {
    "key": ", f f",
    "command": "workbench.action.quickOpen",
    "when": "explorerViewletFocus"
  },
  {
    "key": "shift+q",
    "command": "workbench.action.closeActiveEditor",
    "when": "editorTextFocus && neovim.mode != 'insert'"
  },
  {
    "key": "shift+l",
    "command": "workbench.action.nextEditor",
    "when": "(editorTextFocus && neovim.mode != 'insert') || (!editorTextFocus && !inputFocus && !textInputFocus && !auxiliaryBarFocus)"
  },
  {
    "key": "shift+cmd+]",
    "command": "-workbench.action.nextEditor"
  },
  {
    "key": "shift+h",
    "command": "workbench.action.previousEditor",
    "when": "(editorTextFocus && neovim.mode != 'insert') || (!editorTextFocus && !inputFocus && !textInputFocus && !auxiliaryBarFocus)"
  },
  {
    "key": "alt+cmd+left",
    "command": "-workbench.action.previousEditor"
  },
  {
    "key": "cmd+cmd+[",
    "command": "-workbench.action.previousEditor"
  },
  {
    "key": "ctrl+j",
    "command": "extension.smartFocusBelow",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.action.focusAboveGroup",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+h",
    "command": "extension.smartFocusLeft",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+h",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "auxiliaryBarFocus"
  },
  {
    "key": "ctrl+l",
    "command": "extension.smartFocusRight",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "explorerViewletFocus || !editorTextFocus"
  },
  {
    "key": "ctrl+g",
    "command": "workbench.action.focusActiveEditorGroup",
    "when": "!editorTextFocus"
  },
  {
    "key": "cmd+e",
    "command": "-actions.findWithSelection"
  },
  {
    "key": "cmd+e",
    "command": "-editor.action.toggleScreenReaderAccessibilityMode",
    "when": "accessibilityHelpIsShown"
  },
  {
    "key": "cmd+e",
    "command": "workbench.files.action.focusFilesExplorer"
  },
  {
    "key": "cmd+t n",
    "command": "workbench.action.toggleSidebarVisibility"
  },
  {
    "key": "cmd+t a",
    "command": "workbench.action.toggleAuxiliaryBar"
  },
  {
    "key": "cmd+t t",
    "command": "workbench.action.terminal.toggleTerminal"
  },
  {
    "key": "cmd+t p",
    "command": "workbench.action.togglePanel"
  },
  {
    "key": "cmd+right",
    "command": "cursorEnd",
    "when": "textInputFocus && !editorTextFocus"
  },
  {
    "key": "cmd+right",
    "command": "-cursorEnd",
    "when": "textInputFocus"
  },
  {
    "key": "cmd+left",
    "command": "cursorHome",
    "when": "textInputFocus && !editorTextFocus"
  },
  {
    "key": "cmd+left",
    "command": "-cursorHome",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+a",
    "command": "cursorLineStart",
    "when": "textInputFocus && !editorTextFocus"
  },
  {
    "key": "ctrl+a",
    "command": "-cursorLineStart",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+e",
    "command": "cursorLineEnd",
    "when": "textInputFocus && !editorTextFocus"
  },
  {
    "key": "ctrl+e",
    "command": "-cursorLineEnd",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+h",
    "command": "-deleteLeft",
    "when": "textInputFocus"
  },
]
